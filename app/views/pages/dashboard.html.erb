<h1> My dashboard </h1>

<div class="container">
  <h2> My bookings : </h2>
  <div class="flexbox">
    <% @bookings.each do |booking| %>
      <div class="card shadow">
          <div class="card_height">
          <%= link_to(watch_path(booking.watch)) do %>
              <% if booking.watch.photo.attached? %>
                <%= cl_image_tag booking.watch.photo.key, class: "card_img" %>
              <% else %>
                <%= image_tag "https://rb.gy/c98mip", class:"card_img" %>
              <% end %>
          <% end %>
          </div>
        <div class="d-flex justify-content-between d-flex align-items-center text_display">
          <%= booking.watch.brand.upcase %>
          <div style="height:30px"></div>
          <%= booking.watch.price_per_day %> €
        </div>
          <%= link_to booking_path(booking), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger" do %>
            <i class="fas fa-trash-alt"></i> Delete
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="container">
  <h2> My watches : </h2>
  <div class="flexbox">
    <% @watches.each do |watch| %>
      <div class="card shadow">
          <div class="card_height">
          <%= link_to(watch_path(watch)) do %>
              <% if watch.photo.attached? %>
                <%= cl_image_tag watch.photo.key, class: "card_img" %>
              <% else %>
                <%= image_tag "https://rb.gy/c98mip", class:"card_img" %>
              <% end %>
          <% end %>
          </div>
        <div class="d-flex justify-content-between d-flex align-items-center text_display">
          <%= watch.brand.upcase %>
          <div style="height:30px"></div>
          <%= watch.price_per_day %> €
        </div>
        <div class="d-flex justify-content-between d-flex align-items-center text_display mb-2">
          <%= link_to edit_watch_path(watch), class: "btn btn-primary" do %>
            <i class="fas fa-edit"></i> Edit
          <% end %>
          <%= link_to watch_path(watch), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger" do %>
            <i class="fas fa-trash-alt"></i> Delete
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
