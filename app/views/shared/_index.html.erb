<div class="flexbox">
  <% @watches.each do |watch| %>
    <div class="card card_border shadow">
        <div class="card_height">
          <%= link_to(watch_path(watch)) do %>
            <% if watch.photo.attached? %>
              <%= cl_image_tag watch.photo.key, class: "card_img" %>
            <% else %>
              <%= image_tag "https://rb.gy/c98mip", class:"card_img" %>
            <% end %>
          <% end %>
        </div>
      <div class="d-flex justify-content-between d-flex align-items-center text_display">
        <div class="d-flex flex-column">
          <div class="text_brand" >
            <%= watch.brand.upcase %>
          </div>
          <div class="text_model" >
            <%= watch.model %>
          </div>
        </div>
          <div style="height:30px"></div>
        <div class="price_style">
          <%= watch.price_per_day %><strong> â‚¬</strong>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="my-2">
</div>
